@using Microsoft.AspNet.Identity
@using Magicodes.Web.Interfaces.Strategy.User
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
    {

        @Html.AntiForgeryToken()
        <ul class="top-user-menu pull-right">
            <li>
                <i class="fa fa-user"></i>
                <a href="#">@User.Identity.GetUserName()</a>
                <span>|</span>
                <a href="javascript:document.getElementById('logoutForm').submit()" class="logout">注销</a>
            </li>
            <li><a href="">个人中心</a></li>
            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a href="/admin">进入后台</a>
                </li>
            }
        </ul>
    }
}
else
{
    <li>
        <i class="fa fa-user"></i>
        <a href="/account/login">登录</a>
    </li>
    <li>
        <i class="fa fa-user"></i>
        <a href="/account/register">注册</a>
    </li>
}
