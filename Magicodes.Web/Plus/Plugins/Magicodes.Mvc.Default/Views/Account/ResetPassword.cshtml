@model Magicodes.Mvc.Default.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "重置密码";
}
<div class="am-g" style="margin-top:80px;">
    <div class="col-lg-6 col-md-8 col-sm-centered">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "am-form", role = "form" }))
        {
            <h2>@ViewBag.Title。</h2>
            @Html.AntiForgeryToken()
            <h4>重置密码。</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "" })
            @Html.HiddenFor(model => model.Code)
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            <br />
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            <br />
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            <br />
            <div class="am-cf">
                <input type="submit" name="" value="重置" class="am-btn am-btn-primary am-btn-sm am-fl">
            </div>
            <br />
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
